{
  "openapi": "3.0.0",
  "info": {
    "title": "D&D Monster API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/monsters": {
      "get": {
        "summary": "Get all monsters",
        "responses": {
          "200": {
            "description": "A list of monsters"
          }
        }
      },
      "post": {
        "summary": "Create a monster",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Monster"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Monster created"
          }
        }
      }
    },
    "/api/monsters/{id}": {
      "get": {
        "summary": "Get a monster by ID",
        "parameters": [{
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }],
        "responses": {
          "200": {
            "description": "Monster found"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "put": {
        "summary": "Update a monster",
        "parameters": [{
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }],
        "responses": {
          "200": {
            "description": "Monster updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a monster",
        "parameters": [{
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }],
        "responses": {
          "204": {
            "description": "Monster deleted"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Monster": {
        "type": "object",
        "properties": {
          "index": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "string" },
          "size": { "type": "string" },
          "alignment": { "type": "string" },
          "armor_class": { "type": "integer" },
          "hit_points": { "type": "integer" },
          "challenge_rating": { "type": "number" }
        }
      }
    }
  }
}
